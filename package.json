{
  "name": "simple-web-site",
  "version": "1.0.0",
  "keywords": [
    "Angular",
    "Playwright",
    "Code Coverage",
    "NestJS"
  ],
  "scripts": {
    "postinstall": "npx husky install",
    "lint": "npm run lint --prefix client",
    "start:client": "npm run start --prefix client",
    "start:server": "npm run start --prefix server",
    "build:client": "npm run build --prefix client",
    "start:karma": "npm run start:karma --prefix client",
    "test:playwright": "npx playwright test",
    "coverage-report": "npx nyc report",
    "playwright-report": "npx playwright merge-reports --reporter html ./blob-report",
    "commit": "git cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "build-docker": "docker build -t simply-web-site:v1.0.0 -f ./Dockerfile .",
    "run-docker": "docker run -p 4200:80 simply-web-site:v1.0.0"
  },
  "private": true,
  "dependencies": {
    "express": "^4.18.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "@elastic/elasticsearch": "^8.17.0",
    "@playwright/test": "^1.45.2",
    "@types/node": "^16.18.23",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "ajv": "^8.12.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^3.0.0-beta.5",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.0",
    "cors": "^2.8.5",
    "coverage-istanbul-loader": "^3.0.3",
    "eslint": "^8.54.0",
    "express-winston": "^4.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "mongodb": "^6.12.0",
    "nyc": "^15.1.0",
    "postcss": "^8.4.49",
    "prettier": "2.8.4",
    "standard-version": "^9.5.0",
    "winston": "^3.17.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18 <= 20.x.x",
    "npm": ">=9 <= 10.x.x"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
